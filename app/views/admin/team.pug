md-button.md-fab(aria-label='Add Team Member', class='md-fab-bottom-right launchItemModal', ng-click='launchAddTeamMemberModal($event)', style="position:fixed !important;")
    md-icon.material-icons add
md-card
    md-toolbar.md-table-toolbar.md-default
        .md-toolbar-tools
            h2.md-title Team              
            .flex(flex='')

    md-table-container
        table(md-table='' md-progress='promise')
            thead(md-head='')
                tr(md-row='')
                    th(md-column='') Name
                    th(md-column='') Position
                    th(md-column='') Actions
            tbody(md-body='')
                tr(md-row='' md-select="teamMember"  md-select-id='name' md-auto-select='' ng-repeat='teamMember in team')
                    td(md-cell='')
                        a(ng-click='edit($event, teamMember)') {{teamMember.fullname}}
                    td(md-cell='') {{teamMember.position}}
                    td(md-cell='')
                        div(layout='row', layout-sm='column',)
                            md-button.md-icon-button.md-accent(aria-label='Edit', ng-click='updateTeamMember($event, teamMember)')
                                md-icon.material-icons edit
                            md-button.md-icon-button.md-accent(aria-label='Delete', ng-click='deleteTeamMember($event, teamMember)')
                                md-icon.material-icons delete

