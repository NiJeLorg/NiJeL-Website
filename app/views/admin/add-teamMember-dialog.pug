.dialog-view
    h2 Add New Team Member
    form(ng-submit='createNewTeamMember()')
        input(type='text' placeholder='Full Names' ng-model='teamMember.fullname' required)
        input(type='text' placeholder='Position' ng-model='teamMember.position' required)
        fieldset
            label Select Profile Photo
                input(type='file' ngf-select ng-model='avatar' name='file' accept='image/*' ngf-max-size='2MB')
        ng-quill-editor(ng-model='teamMember.bio')
        input(type='submit')