.dialog-view
    h2 Update Testimonial
    form(ng-submit='updateTestimonial()')
        input(type='text' placeholder='Reviewer' ng-model='testimonial.reviewer')
        input(type='text' placeholder='Position' ng-model='testimonial.position')
        input(type='text' placeholder='Company' ng-model='testimonial.company')
        textarea(rows='6' ng-model='testimonial.testimonial')
        input(type='submit')