.dialog-view
    h2 Add New Testimonial
    form(ng-submit='createNewTestimonial()')    
        input(type='text' placeholder='Reviewer' ng-model='newTestimonial.reviewer' required)
        input(type='text' placeholder='Position' ng-model='newTestimonial.position' required)
        input(type='text' placeholder='Company' ng-model='newTestimonial.company' required)
        textarea(required rows='6' ng-model='newTestimonial.testimonial')
        input(type='submit' placeholder='Testimonial') 